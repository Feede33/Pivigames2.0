{
  "crons": [
    {
      "path": "/api/cron/fetch-games",
      "schedule": "0 3 1 * *"
    },
    {
      "path": "/api/cron/sync-specials",
      "schedule": "0 12 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/steam/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}
